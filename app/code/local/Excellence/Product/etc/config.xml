<config>
    <modules>
        <Excellence_Product>
            <version>0.1.0</version>
        </Excellence_Product>
    </modules>
    <frontend>
        <routers>
            <product>
                <use>standard</use>
                <args>
                    <module>Excellence_Product</module>
                    <frontName>product</frontName>
                </args>
            </product>
        </routers>
        <layout>
            <updates>
                <product>
                    <file>product.xml</file>
                </product>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<product>
				<use>admin</use>
				<args>
					<module>Excellence_Product</module>
					<frontName>product</frontName>
				</args>
			</product>
        </routers>
    </admin>
 
    <global>     
        <blocks>
            <product>
                <class>Excellence_Product_Block</class>
            </product>
        </blocks>
        <helpers>
            <product>
                <class>Excellence_Product_Helper</class>
            </product>
        </helpers>
    </global>
</config>
